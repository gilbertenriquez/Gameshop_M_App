<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:handlers="clr-namespace:Gameshop_M_App.Handlers"
             x:Class="Gameshop_M_App.CustomControls.OutlineEntryControl"
             x:Name="this">
    
    
    <Frame Padding="6" BorderColor="Gray">
        <handlers:BorderlessEntry x:Name="txtEntry" 
               Focused="txtEntry_Focused"
               Unfocused="txtEntry_Unfocused"
               Text="{Binding Source={x:Reference this},Path=Text}"/>

    </Frame>
    <Label x:Name="LblPlaceholder"
           Grid.Row="0"
           FontSize="15"
           Margin="10,0,10,0"
           TextColor="White"
           Text="{Binding Source={x:Reference this},Path=Placeholder}"           
           HorizontalOptions="StartAndExpand"
           VerticalOptions="CenterAndExpand"/>
</Grid>
