<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_M_App.Pages.WelcomePage"
             Title="WelcomePage">
    <Frame
       HasShadow="True"
        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Frame.Background>
            <!-- StartPoint defaults to (0,0) -->
            <LinearGradientBrush EndPoint="1,1">
                <GradientStop Color="#0C134F"
                          Offset="0.1" />
                <GradientStop Color="Black"
                          Offset="1.0" />
            </LinearGradientBrush>
        </Frame.Background>


        <Grid >
            <Label FontSize="25"
            Text="Welcome to GAME SHOP!" TextColor="#146C94"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button x:Name="GetStart" Text="Get Started!" VerticalOptions="EndAndExpand" TextColor="#146C94"
                        Clicked="GetStart_Clicked"/>
        </Grid>


    </Frame>
</ContentPage>