<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.ChangePassword"
             Title="ChangePassword">
    <VerticalStackLayout>
        <StackLayout Padding="16">
            <Label Text="Change Password"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Entry Placeholder="New password" x:Name="TxtPassword" IsPassword="True"/>
            <Entry Placeholder="Confirm password" x:Name="TxtConfirm" IsPassword="True"/>
            <Button Text="Change Password" x:Name="BtnChangePassword"
                    Clicked="BtnChangePassword_Clicked"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>