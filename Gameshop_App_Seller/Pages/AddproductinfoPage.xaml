<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.AddproductinfoPage"
             Title="AddproductinfoPage"
             BackgroundColor="#212025"
             >

    <Grid Background="Transparent" BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ImageButton HorizontalOptions="Start" Source="backbtnwhite.png" 
                     Grid.Column="0" 
                     Grid.Row="0" 
                     Margin="20"
                     BackgroundColor="Transparent"
                     HeightRequest="20"  
                     Clicked="ImageButton_Clicked" />

        <ScrollView Grid.Row="1"  Margin="30">


            <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Spacing="20">

                <Label Text="Create or moderate a gaming community or forum where gamers can connect, share experiences, and motivate each other."                                     
               FontSize="20" FontFamily="RobotoLight"  TextColor="White"/>

                <Frame BackgroundColor="Transparent" BorderColor="White" Padding="0,0">
                    <Entry  Placeholder="PRODUCT NAME" PlaceholderColor="LightGray" TextColor="White" x:Name="entryName"/>
                </Frame>

                <Frame BackgroundColor="Transparent" BorderColor="White" Padding="0,0">
                    <Entry Placeholder="PRODUCT PRICE" PlaceholderColor="LightGray" TextColor="White" x:Name="entryPrice" TextChanged="entryPrice_TextChanged"/>
                </Frame>

                <StackLayout Grid.Row="5" VerticalOptions="CenterAndExpand"
                      x:Name="progressLoading"
                      IsVisible="False"
                      AbsoluteLayout.LayoutBounds="0,0,1,1"
                      AbsoluteLayout.LayoutFlags="All"
                      BackgroundColor="Transparent">
                    <ActivityIndicator
                      x:Name="ai"
                      IsRunning="True" IsVisible="True"
                      HorizontalOptions="CenterAndExpand"
                      Color="{StaticResource ButtonColor}" Margin="0,0,0,0" />
                </StackLayout>


                <Frame BackgroundColor="Transparent" BorderColor="White" Padding="0,0" HeightRequest="200">
                    <Editor Placeholder="PRODUCT DESCRIPTION" PlaceholderColor="LightGray" TextColor="White" x:Name="entryDescription"/>
                </Frame>
                <Frame BackgroundColor="Transparent" BorderColor="White" Padding="0,0">
                    <Entry Placeholder="PRODUCT QUANTITY" PlaceholderColor="LightGray" TextColor="White" x:Name="entryQuantity" TextChanged="entryQuantity_TextChanged"/>
                </Frame>

                <Grid HeightRequest="50" Margin="10" VerticalOptions="CenterAndExpand" WidthRequest="200">

                    <Button Text="Save"  x:Name="saveBTN" BackgroundColor="#d22f3d"
            BorderColor="Transparent" TextColor="White" Clicked="saveBTN_Clicked"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>