<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.SignUpPage"
             Title="SignUpPage"
             BackgroundColor="#EEF5FF">
    <ScrollView>
        <VerticalStackLayout Spacing="20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  AbsoluteLayout.LayoutBounds="0,0,1,1"
          AbsoluteLayout.LayoutFlags="All" Margin="20">

                <ImageButton Grid.Row="0" Source="back.png" HeightRequest="30" HorizontalOptions="Start" x:Name="btnBackImg" Clicked="btnBackImg_Clicked" />

            <Label Text="Registering is quick and simple." FontSize="20" FontAttributes="Bold" Margin="20" TextColor="#007AFF"/>

            <Grid RowDefinitions=" Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="20">

                <Label Grid.Row="0" Text="First Name" TextColor="Black"/>
                <Frame Grid.Row="1" BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
                    <Entry Placeholder="First Name"
                       PlaceholderColor="DimGray"
                       TextColor="Black"
                       x:Name="FNEntry"/>
                </Frame>
                <Label Grid.Row="2" Text="Last Name" TextColor="Black"/>

                <Frame Grid.Row="3" BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
                    <Entry Placeholder="Last Name"
                       PlaceholderColor="DimGray"
                       TextColor="Black"
                       x:Name="LNEntry"/>
                </Frame>
                
                <Label Grid.Row="4" Text="Email" TextColor="Black"/>
                <Frame Grid.Row="5" BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
                    <Entry Placeholder="Email"
                       PlaceholderColor="DimGray"
                       TextColor="Black"
                       x:Name="emailEntry"/>
                </Frame>

                <StackLayout
x:Name="progressLoading"
IsVisible="False"
AbsoluteLayout.LayoutBounds="0,0,1,1"
AbsoluteLayout.LayoutFlags="All"
BackgroundColor="Transparent">
                    <ActivityIndicator
    x:Name="ai"
    IsRunning="True" IsVisible="True"
    HorizontalOptions="CenterAndExpand"
    Color="{StaticResource TextColorAccent}" Margin="0,0,0,0" />
                    <Label x:Name="lblorderstate" FontSize="20" 
                           FontFamily="facompa" Text="We're processing your request, please wait..." 
                           Margin="20" 
                           HorizontalOptions="CenterAndExpand" 
                           TextColor="#7cfdd0"/>
                </StackLayout>

                <Label Grid.Row="6" Text="Password" TextColor="Black"/>

                <Frame Grid.Row="7"  BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
                    <Entry Placeholder="Password"
                        IsPassword="True"
                        TextColor="Black"
                        PlaceholderColor="DimGray"
                        x:Name="passwordEntry"/>
                </Frame>

                <Label Grid.Row="8" Text="Home Address" TextColor="Black"/>
                <Frame Grid.Row="9"  BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
                    <Entry Placeholder="Address"
                       TextColor="Black"
                       PlaceholderColor="DimGray"
                       x:Name="locationEntry"/>
                </Frame>

                <Label Grid.Row="10" 
                       Text="Birthday" 
                       FontSize="15"  
                       TextColor="Black"/>

                <DatePicker Grid.Row="11"   
                        BackgroundColor="White"
                        x:Name="birthdayPicker" 
                        TextColor="Black"   
                        Format="MM-dd-yyyy"
                />

                <Label Grid.Row="12" 
                   Text="Gender" 
                   FontSize="15" 
                   TextColor="Black"/>

                
                <Picker Grid.Row="13"  
                        BackgroundColor="White"
                        x:Name="genderPicker" 
                        TitleColor="Black" 
                        Title="Select Gender"                       
                        TextColor="Black" >

                    <Picker.ItemsSource  >
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Male</x:String>
                            <x:String>Female</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

            </Grid>

            <Button Text="Register" 
                    x:Name="nextBTN"   
                    BackgroundColor="#007AFF"
                    TextColor="White" 
                    Clicked="nextBTN_Clicked" 
                    />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>