<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.ReviewsOnSellerPage"
             Title="ReviewsOnSellerPage"  BackgroundColor="#212025">

    <Grid Background="Transparent" BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ImageButton Grid.Row="0"
                  x:Name="btnBackImg"
                  Source="backbtnwhite.png"
                  BackgroundColor="Transparent"
                  HeightRequest="20"
                  HorizontalOptions="Start"
                  VerticalOptions="Start"
                  Margin="20,10,0,0"
                  Clicked="btnBackImg_Clicked" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20">
                <CollectionView x:Name="reviewontheSeller"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                <Frame
                                      BackgroundColor="#212025" 
                                      Padding="5"
                                      BorderColor="White"
                                      Margin="20"
                                      VerticalOptions="Start">

                                    <Grid RowDefinitions="AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO" Margin="20" RowSpacing="5">
                                        <Image Grid.Row="0"  
                                       HorizontalOptions="Start" 
                                       x:Name="TransactionImage" Source="{Binding itemShopImage}"
                                       HeightRequest="200" Aspect="AspectFit"/>
                                        <Label Grid.Row="2" Text="{Binding comment}" TextColor="White"   />
                                        <Label Grid.Row="5" x:Name="Stars" Text="{Binding StarReview}" TextColor="White" />
                                        <Label Grid.Row="4"  Text="{Binding Date}" TextColor="White" />
                                        <StackLayout Grid.Row="6" 
                                                     HorizontalOptions="Start" 
                                                     Orientation="Horizontal"
                                                     HeightRequest="30">
                                            <Image x:Name="stars1" Source="unfilledstar.png" HeightRequest="40" WidthRequest="40"/>
                                            <Image x:Name="stars2" Source="unfilledstar.png" HeightRequest="40" WidthRequest="40"/>
                                            <Image x:Name="stars3" Source="unfilledstar.png" HeightRequest="40" WidthRequest="40"/>
                                            <Image x:Name="stars4" Source="unfilledstar.png" HeightRequest="40" WidthRequest="40"/>
                                            <Image x:Name="stars5" Source="unfilledstar.png" HeightRequest="40" WidthRequest="40"/>
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>