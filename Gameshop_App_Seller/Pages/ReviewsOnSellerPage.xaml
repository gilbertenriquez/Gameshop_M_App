<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.ReviewsOnSellerPage"
             Title="ReviewsOnSellerPage"  BackgroundColor="#EEF5FF">
    <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20">
        <CollectionView x:Name="reviewontheSeller" BackgroundColor="Black" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="AUTO,AUTO,AUTO,AUTO" HeightRequest="350" RowSpacing="20" Margin="20">
                        <Label Grid.Row="1" Text="{Binding comment}" TextColor="White" />
                        <Image Grid.Row="2" x:Name="TransactionImage" Source="{Binding itemShopImage}" HeightRequest="250" Aspect="AspectFit"/>
                        <Label Grid.Row="3" x:Name="Stars" Text="{Binding StarReview}" TextColor="White"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
       
    </VerticalStackLayout>
</ContentPage>