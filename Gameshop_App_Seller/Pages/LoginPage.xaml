<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.LoginPage"
             Title="LoginPage" BackgroundColor="White">



    <VerticalStackLayout Spacing="25" Margin="20" VerticalOptions="FillAndExpand">
        <ImageButton Grid.Row="0" Source="back.png" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Start" x:Name="btnBackImg"/>
        <StackLayout VerticalOptions="CenterAndExpand"
            x:Name="progressLoading"
            IsVisible="False"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Transparent">
            <ActivityIndicator
                x:Name="ai"
                IsRunning="True" IsVisible="True"
                HorizontalOptions="CenterAndExpand"
                Color="{StaticResource ButtonColor}" Margin="0,0,0,0" />
            <Label x:Name="lblorderstate" FontSize="20" FontFamily="facompa" Text="We're processing your request, please wait..." Margin="20" HorizontalOptions="CenterAndExpand" TextColor="WhiteSmoke"/>
        </StackLayout>

        <Label FontSize="40"
            Text="GAMESHOP" TextColor="#007AFF"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label FontSize="25"
            Text="Offer other players your in-game item for sale." TextColor="Black"
            HorizontalTextAlignment="Center"
                   Margin="0,0,0,30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Frame BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
            <Entry Placeholder="Email" HorizontalOptions="FillAndExpand"
                   TextColor="Black"
                   PlaceholderColor="DimGray"
                   x:Name="emailEntry"/>
        </Frame>

        <Frame BackgroundColor="Transparent" BorderColor="Black" Padding="0,0">
            <Entry Placeholder="Password" HorizontalOptions="FillAndExpand"
                   TextColor="Black"
                   IsPassword="True"
                   PlaceholderColor="DimGray"
                   x:Name="passwordEntry"/>
        </Frame>

        <Button Text="Log In" 
                x:Name="lOGINbtn"   
                BackgroundColor="#007AFF"
                TextColor="White" 
                Clicked="lOGINbtn_Clicked"/>

        <Label Text="Forgot password?"
                       TextColor="#007AFF"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Label.GestureRecognizers>
        </Label>

        <Button Text="Create new account"                     
                    x:Name="CreateAccountBTN"
                     BackgroundColor="#007AFF"
                     TextColor="White"
                    Clicked="CreateAccountBTN_Clicked"
                    />

    </VerticalStackLayout>
</ContentPage>