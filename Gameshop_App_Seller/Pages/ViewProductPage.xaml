<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.ViewProductPage"
             Title="ViewProductPage"  BackgroundColor="#EEF5FF">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20">
            <Grid RowDefinitions="AUTO,AUTO,AUTO" HorizontalOptions="FillAndExpand">
                <HorizontalStackLayout Grid.Row="0" HorizontalOptions="End" Margin="20">
                    <ImageButton  Source="review.png"
                    Aspect="AspectFit"
                    HeightRequest="40"
                    HorizontalOptions="End" 
                    VerticalOptions="Start"
                    x:Name="ReviewBTN"
                    Clicked="ReviewBTN_Clicked"              
                    />

                    <ImageButton  Source="flag.png"
                    Aspect="AspectFit"
                    HeightRequest="35"
                    HorizontalOptions="End" 
                    VerticalOptions="Start"
                    Margin="0,5,0,0"
                    x:Name="reportsBTN"
                    Clicked="reportsBTN_Clicked"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="0" HorizontalOptions="Start" Margin="20">
                    <ImageButton Source="back.png"
                     Aspect="AspectFit"
                     HeightRequest="40"
                     HorizontalOptions="Start" 
                     x:Name="btnBackImg" 
                     Clicked="btnBackImg_Clicked"
                     />
                </HorizontalStackLayout>
            </Grid>
           
            <Grid RowDefinitions="AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO,AUTO" RowSpacing="10" Background="White" Padding="10" >


                <VerticalStackLayout Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <CarouselView x:Name="PhotoCarousel">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="400">
                                    <Image Source="{Binding}" Aspect="AspectFit" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand"/>
                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </VerticalStackLayout>
                
                <Label Grid.Row="1" Text="Item Name" FontSize="15" />
                <Label Grid.Row="2"
                       TextColor="Black"
                       x:Name="ProductName"  FontSize="30" FontAttributes="Bold"/>

                <Label Grid.Row="3" Text="Description" FontSize="15" />

                <Label  Grid.Row="4"
                        TextColor="Black"
                        x:Name="ProductDescription"
                        FontAttributes="Bold"
                        FontSize="30"                   
                        MaxLines="1"></Label>
                
                <Label Grid.Row="5"
                      Text="See More"
                       Margin="0,-10,0,20"
                      TextColor="#007AFF"
                      x:Name="SeeMoreLabel"
                      FontSize="16"
                      VerticalOptions="End">
                    
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer x:Name="OnSeeMore" Tapped="OnSeeMore_Tapped" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Grid.Row="6" Text="Price" FontSize="15" />
                <Label  Grid.Row="7"
                        TextColor="Black"
                        x:Name="ProductPrice" FontSize="30" Text="{Binding ProductPrice, StringFormat='â‚±{0:N2}'}" FontAttributes="Bold"/>

                <Label Grid.Row="8" Text="Seller" FontSize="30" Margin="0,25,0,0"/>
                <HorizontalStackLayout Grid.Row="9" BackgroundColor="LightGray">
                    <Grid RowDefinitions="AUTO" ColumnDefinitions="AUTO,AUTO">
                    <Border StrokeShape="RoundRectangle 60" 
                            HorizontalOptions="StartAndExpand"                                              
                            Grid.Row="1" Grid.Column="0" Margin="10" 
                            StrokeThickness="3"                                             
                            Stroke="#007AFF"                                             
                            HeightRequest="100" 
                            WidthRequest="100">
                        <Image x:Name="imglogo" HorizontalOptions="Fill" Aspect="AspectFill"/>
                    </Border>
                        <Border Grid.Row="1" Grid.Column="1"  HorizontalOptions="FillAndExpand" BackgroundColor="Transparent"  > 
                    <Label VerticalOptions="Center" x:Name="Shopnames" FontAttributes="Bold" FontSize="20" TextColor="Black" />
                        </Border>
                    </Grid>
                </HorizontalStackLayout>

                <Button Text="Chat Now" TextColor="White" Grid.Row="10" Margin="0,20,0,0" x:Name="linkTOmessenger" BackgroundColor="#007AFF" Clicked="linkTOmessenger_Clicked"/>
                <Label Grid.Row="11" x:Name="containMessengerLink" TextColor="Transparent"/>
            </Grid>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>