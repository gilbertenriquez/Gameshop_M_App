<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.BuyerHomePage"
             Title="Home"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F1F0E8">

    <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid RowDefinitions="AUTO,AUTO,AUTO,Auto"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Border Grid.Row="0"
            Padding="0"
            Margin="-5,-60,-5,20" BackgroundColor="#272829"
            StrokeThickness="0"
            StrokeShape="RoundRectangle 40">
                <Border.Shadow>
                    <Shadow Brush="#007AFF"
                    Offset="20,30"
                    Radius="30"
                    Opacity=".5" />
                </Border.Shadow>
                <Grid>
                    <Image Aspect="AspectFill" Opacity="0.5"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand">
                        <Image.Source >
                            <UriImageSource x:Name="imgcover" 
                                    CachingEnabled="True"
                                    CacheValidity="5"/>
                        </Image.Source>
                    </Image>
                    <!--<Border.Background>
            <LinearGradientBrush EndPoint="5,5">
                <GradientStop Color="{StaticResource Gradient1}" Offset="0.01"/>
                <GradientStop Color="{StaticResource Gradient2}" Offset="0.3"/>
            </LinearGradientBrush>
        </Border.Background>-->

                    <Grid ColumnSpacing="50"
                  RowDefinitions="Auto, Auto, Auto"
                  VerticalOptions="Start"
                  RowSpacing="1"
                  HorizontalOptions="FillAndExpand"
                  Margin="5" Padding="5">

                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *"
                      HorizontalOptions="FillAndExpand">

                            <Label Grid.Column="0" Text=""
                           TextColor="#007AFF"
                           FontFamily="RobotoLight" Margin="40" HorizontalOptions="Start"
                           FontSize="30" />
                            <HorizontalStackLayout Grid.Column="1" Spacing="10"
                                           HorizontalOptions="End" Margin="0,40,60,0"
                                           WidthRequest="100">
                                <ImageButton HeightRequest="25" HorizontalOptions="End"                                        
                                     WidthRequest="25"  x:Name="ChatBTN" Source="chat.png"/>

                                <ImageButton HeightRequest="25" HorizontalOptions="End"                                        
                                     WidthRequest="25" x:Name="notifyBTN" Source="notification.png" />
                            </HorizontalStackLayout>
                        </Grid>

                        <Button Grid.Row="0" Grid.Column="0"
                                TextColor="#007AFF"
                                Text="Become A Seller" 
                                VerticalOptions="End"
                                WidthRequest="140" 
                                x:Name="BecomeSellerBTN"
                                Clicked="BecomeSellerBTN_Clicked"
                                BackgroundColor="White"/>
                        <Grid Grid.Row="1" ColumnDefinitions="Auto, *">

                            <Border StrokeShape="RoundRectangle 40" HorizontalOptions="StartAndExpand"
                            Grid.Row="1" Margin="10,-5" StrokeThickness="1"
                            Stroke="#007AFF"
                            HeightRequest="70" WidthRequest="70">
                                <!--<Border.Shadow>
                        <Shadow Radius="40" Brush="{StaticResource ShadowDark}"
                                Offset="20,20"
                                Opacity=".7" />
                    </Border.Shadow>-->
                                <Image HorizontalOptions="Fill"
                               Aspect="AspectFill" Source="account.png" >
                                    <!-- <Image.Source>
                                <UriImageSource x:Name="imglogo"
                                                CachingEnabled="True"
                                                CacheValidity="5" />
                            </Image.Source>
                            -->
                                </Image>
                            </Border>

                            <Grid Grid.Column="1"
                          RowDefinitions="Auto, Auto"
                          ColumnDefinitions="100, *">
                                <Label Text="Name" Grid.Row="0" x:Name="lblcompanyname"
                               TextColor="#007AFF"
                               FontSize="18" LineBreakMode="TailTruncation"
                               FontFamily="RobotoCondensed" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <CollectionView x:Name ="datalist" VerticalOptions="FillAndExpand">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="10">
                                <ScrollView Margin="20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                    <Frame   
                                      BackgroundColor="WhiteSmoke" 
                                      BorderColor="Gray" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="10"
                                      VerticalOptions="FillAndExpand" >
                                        <Grid ColumnSpacing="20" RowSpacing="10" Margin="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>


                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />

                                                <ColumnDefinition Width="*" />

                                                <ColumnDefinition Width="100" />

                                            </Grid.ColumnDefinitions>
                                            <ImageButton Margin="20" HorizontalOptions="End"
                                                       BackgroundColor="Transparent"
                                                       VerticalOptions="Start"
                                                       x:Name="reportBTN"
                                                            Grid.Row="0"
                                                       Grid.Column="2"
                                                       HeightRequest="2"
                                                       Source="report.png"                                                                                                               
                                                       Aspect="AspectFit" />
                                            <Image Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Source="{Binding image1}" HeightRequest="300" WidthRequest="300"/>

                                            <Label Grid.Row="1" Text="Item Name" TextColor="Black"/>
                                            <Label Grid.Row="2" TextColor="Black" FontSize="20" Text="{Binding ProductName}" />

                                            <Label Grid.Row="3" Text="Description" TextColor="Black"/>
                                            <Label Grid.Row="4" TextColor="Black" FontSize="20" Text="{Binding ProductDesc}" />

                                            <Label Grid.Row="5" Text="Price" TextColor="Black"/>
                                            <Label Grid.Row="6" TextColor="Black" FontSize="20" Text="{Binding ProductPrice}" />

                                            <Label Grid.Row="7" Text="Qauntity" TextColor="Black"/>
                                            <Label Grid.Row="8" TextColor="Black" FontSize="20" Text="{Binding ProductQuantity}" />

                                            <Button Grid.Row="9" 
                                               HorizontalOptions="Center" 
                                               Grid.ColumnSpan="2" 
                                               x:Name="btnSend" 
                                               Text="Send a Message"
                                               TextColor="White"
                                               BackgroundColor="Black"/>
                                        </Grid>
                                    </Frame>
                                </ScrollView>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>
    </ScrollView>
</ContentPage>