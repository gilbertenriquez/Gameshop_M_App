<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.MessagePage"
             Title="MessagePage" BackgroundColor="White">
    
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="20">
        <ImageButton Grid.Row="0" Source="back.png" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Start" x:Name="btnBackImg" Clicked="btnBackImg_Clicked"/>

        <ImageButton Source="sent.png" HeightRequest="5" WidthRequest="5" VerticalOptions="End" HorizontalOptions="End" Margin="0,0,1,0" 
                     Clicked="ImageButton_Clicked"/>
        <Frame  VerticalOptions="End" CornerRadius="20" Padding="0.0" WidthRequest="300" BackgroundColor="Transparent" IsEnabled="True">
            <Entry TextColor="Black" Placeholder="Type your Message...." PlaceholderColor="Black"/>
        </Frame>
        
    </Grid>
</ContentPage>