<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gameshop_App_Seller.Pages.SearchPage"
                      Shell.NavBarHasShadow="False"
             Shell.NavBarIsVisible="False" 
             BackgroundColor="#F1F0E8">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand" Spacing="40" Margin="20" AbsoluteLayout.LayoutBounds="0,0,1,1"
          AbsoluteLayout.LayoutFlags="All" BackgroundColor="#272829">

            <Border StrokeThickness="0" HeightRequest="56" BackgroundColor="#1d1d1d"
                    Stroke="Red">
                <SearchBar Placeholder="Search items..."  PlaceholderColor="#007AFF" TextColor="#007AFF"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>